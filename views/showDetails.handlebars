<h1 class="mb-1 restaurant-show-title">{{showID.name}}</h1>
<div class="container">
  <div class="row">
    <div class="col-12 col-md-10 mx-auto">
      <a href="/restaurant/{{showID._id}}/edit" class="btn btn-secondary">Edit</a>

      <form action="/restaurant/{{ showID._id }}/delete" method="POST" style="display: inline;">
        <button type="submit" class="btn btn-danger">delete</button>
      </form>
      <a href="/" class="btn  btn-link">Back</a>

      <p class="mb-1 mt-5">
        <span class="text-secondary">
          <i class="fas fa-utensils pr-2"></i>
          類別：
        </span>
        {{showID.category}}
        <span class="badge badge-pill badge-danger font-weight-normal">
          {{showID.rating}}
          <i class="fas fa-star fa-xs"></i>
        </span>
      </p>

      <p class="mb-1">

        <span class="text-secondary">
          <i class="fas fa-map-marker-alt pr-2"></i>
          地址：
        </span>
        {{showID.location}}
        <a href="https://goo.gl/maps/V9mKwVJ4s5v" class="text-secondary" target="_blank">
          <i class="fas fa-location-arrow pr-2 fa-xs"></i>
        </a>
      </p>

      <p class="mb-1">
        <span class="text-secondary">
          <i class="fas fa-mobile-alt pr-2"></i>
          電話：
        </span>
        {{showID.phone}}
      </p>

      <p class="mb-5">
        {{showID.description}}
      </p>

      <img class="rounded mx-auto d-block mb-4 w-100" src="{{showID.image}}" alt="{{showID.name}}"
        style="max-width: 600px;">
    </div>
  </div>
</div>